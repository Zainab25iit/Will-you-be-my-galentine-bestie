<script>
    const yesBtn = document.getElementById("yes");
    const noBtn = document.getElementById("no");
    const msg = document.getElementById("msg");
    const note = document.getElementById("note");

    yesBtn.onclick = function() {
        msg.innerHTML = "Yayyyy ðŸ’– I Love You So Much Ma Bestie!";
        note.innerHTML =
            "You are literally my safe place, my chaos partner, my crying shoulder and my biggest hype woman. Thank you for being my forever girl. I don't know what I'd do without you ðŸ˜­ðŸ’— Happy Galentines Day my soulmate bestie!";

        createHearts();
    }

    noBtn.onmouseover = function() {
        const x = Math.random() * window.innerWidth;
        const y = Math.random() * window.innerHeight;
        noBtn.style.position = "absolute";
        noBtn.style.left = x + "px";
        noBtn.style.top = y + "px";
    }

    function createHearts() {
        for (let i = 0; i < 30; i++) {
            let heart = document.createElement("div");
            heart.className = "heart";
            heart.innerHTML = "ðŸ’–";
            heart.style.left = Math.random() * window.innerWidth + "px";
            heart.style.animationDuration = (Math.random() * 2 + 2) + "s";
            document.body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, 3000);
        }
    }
</script>

